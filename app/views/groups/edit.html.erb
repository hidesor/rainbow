<div class="col-md-12">
    <h1>修改討論版</h1>

    <hr>
    <%= simple_form_for @group do |f| %>
    <div class="form-group">
        <%= f.input :title %>
        <%= f.input :description %>
    </div>
    <div class="form-group">
        <%= f.simple_fields_for :photo do |c| %>
        <%= c.input :image , as: :file %>
        <% end %>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
    <% end %>
</div>
