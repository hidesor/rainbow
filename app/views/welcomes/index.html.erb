<!-- Header Carousel -->
<header id="myCarousel" class="carousel slide top_margin-bottom">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% @types.each do |type| %>
        <% if type.order==1 %>
          <li data-target="#myCarousel" data-slide-to="<%= type.order %>" class="active"></li>
        <% else %>
         <li data-target="#myCarousel" data-slide-to="<%= type.order %>"></li>
        <% end %>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <% @types.each do |type| %>
        <% if type.order==1 %>
           <div class="item active">
        <% else %>
          <div class="item">
        <% end %>
        <%= link_to admin_type_path(type) do %>
          <% if type.photo.present? %>
            <div class="fill" style="background-image:url(<%=type.photo.image.medium.url %>)"></div>
            <div class="carousel-caption"></div>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          <% end %>
        <% end %>
        </div>
      <% end %>

    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>
</header>

<!-- Page Content -->
